{
    "name": "Kusion",
    "id": "kusion",
    "version": "1.0.3",
    "description": "Installs kusion tools pack and the vscode kusion and KCL extension",
    "options": {
        "version": {
            "type": "string",
            "description": "Specify a version of kusion",
            "default": "v0.7.1"
        }
    },
    "containerEnv": {
        "PATH": "~/.kusion/bin:~/.kusion/kclvm/bin:${PATH}",
        "KUSION_PATH": "~/.kusion"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "KusionStack.kusion",
                "kcl.kcl-vscode-extension"
            ]
        }
    }
}
